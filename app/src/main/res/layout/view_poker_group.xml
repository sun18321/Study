<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:id="@+id/poker_group"
                android:gravity="center_horizontal"
                android:visibility="invisible"
    >

    <RelativeLayout
        android:id="@+id/group_single_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <include layout="@layout/view_poker"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/group_single_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        >
        <include layout="@layout/view_poker"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/group_single_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        >
        <include layout="@layout/view_poker"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/group_single_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        >
        <include layout="@layout/view_poker"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/group_single_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        >
        <include layout="@layout/view_poker"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bull_result"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/fight_bull_bg"
            android:layout_centerInParent="true"
            android:background="@mipmap/bg_poker_result_text"
            android:layout_width="90dp"
            android:layout_height="30dp"/>

        <ImageView
            android:id="@+id/fight_bull_number"
            android:layout_centerInParent="true"
            android:src="@mipmap/text_bull_n4"
            android:layout_width="50dp"
            android:layout_height="20dp"/>


    </RelativeLayout>




</RelativeLayout>