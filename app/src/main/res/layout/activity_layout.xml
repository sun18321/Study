<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    >

    <Button
        android:id="@+id/btn_1"
        android:text="btn_1"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_2"
        android:text="btn_2"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/onlayout"
        android:text="onlayout"
        android:layout_toRightOf="@+id/btn_3"
        android:layout_alignTop="@+id/btn_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/location"
        android:text="location"
        android:layout_toLeftOf="@+id/btn_3"
        android:layout_alignTop="@+id/btn_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_3"
        android:text="btn_3"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_4"
        android:text="btn_4"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_5"
        android:text="btn_5"
        android:layout_toLeftOf="@+id/btn_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_6"
        android:text="btn_6"
        android:layout_toRightOf="@+id/btn_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_7"
        android:text="btn_7"
        android:layout_toRightOf="@+id/btn_2"
        android:layout_alignTop="@+id/btn_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_8"
        android:text="btn_8"
        android:layout_toLeftOf="@+id/btn_2"
        android:layout_alignTop="@+id/btn_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/center_iv"
        android:src="@mipmap/p8"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rl_father"
        />

    <RelativeLayout
        android:id="@+id/rl_father"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        >

        <ImageView
            android:id="@+id/iv"
            android:src="@mipmap/p44"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_test"
            android:src="@mipmap/g8"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>
